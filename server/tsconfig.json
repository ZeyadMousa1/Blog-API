{
   "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": false
   },
   "include": ["src/**/*.ts"],
   "exclude": ["node_modules"]
}
